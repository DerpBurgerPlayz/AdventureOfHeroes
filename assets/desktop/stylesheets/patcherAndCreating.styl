// progress bar

.bar
    height 5px
    position absolute
    top -3px
    left 0
    right 0
    .progress
        border-radius 0
        position absolute
        height 100%
        
        transition all 400ms
        
.game.light-theme .bar
    .progress
        background-color brand-info
        animation progressLight 2000ms infinite

.game.dark-theme .bar
    .progress
        background-color brand-danger
        animation progressDark 2000ms infinite

@keyframes progressLight
    0%
        box-shadow 0px 0px 0px brand-info
    50%
        box-shadow 0px 0px 5px brand-info
    100%
        box-shadow 0px 0px 0px brand-info
        
@keyframes progressDark
    0%
        box-shadow 0px 0px 0px brand-danger
    50%
        box-shadow 0px 0px 5px brand-danger
    100%
        box-shadow 0px 0px 0px brand-danger



.patcher, .creating
    position absolute
    left 0
    right 0
    bottom 0
    
    transition 400ms all
    font-size: 1.3em
    user-select none;
    cursor: default;
    
.patcher   
    height: 60px;
    .text-left, .text-center, .text-right
        top 0
        bottom 0
        left 0
        right 0
        padding 1em 20px
        position absolute
    //animation  
    display: block;
    &.ng-enter, 
    &.ng-leave
        transition: all 400ms;
    
    &.ng-enter,
    &.ng-leave.ng-leave-active 
        bottom: -70px;
  
 
    &.ng-leave,
    &.ng-enter.ng-enter-active
        bottom: 0;    

.game.light-theme .patcher
    background-color: rgba(gray-lighter, 0.7)
    border-top 1px solid rgba(gray-light, 0.7)
    color brand-primary

.game.dark-theme .patcher
    background-color: rgba(gray-darker, 0.7)
    border-top 1px solid rgba(gray-dark, 0.7)
    color rgba(#FFF, 0.5)


.creating
    .bar
        height: 6px;
        top: -6px;
    //animation  
    display: block;
    &.ng-enter, 
    &.ng-leave
        transition: all 400ms;
    
    &.ng-enter,
    &.ng-leave.ng-leave-active 
        bottom: -10px;
  
 
    &.ng-leave,
    &.ng-enter.ng-enter-active
        bottom: 0px;


