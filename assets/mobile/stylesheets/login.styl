.loginContent
  position absolute;
  top: 100%;
  margin-top: -150px;
  left: 10px;
  right: 10px;

.loginContent.ng-enter,
.loginContent.ng-move {
  transition: 1s linear opacity;
  opacity: 0;
}
.repeated-item.ng-enter.ng-enter-active,
.repeated-item.ng-move.ng-move-active{
  opacity: 1;
}

.repeated-item.ng-leave {
  opacity: 0;
}

.ng-hide {
  display:none!important;

}